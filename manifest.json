{
  "manifest_version": 3,
  "name": "rtlit",
  "description": "Change the direction of any text to rtl or ltr in you webpage",
  "version": "0.0.1",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": ["storage"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "sw/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "./images/icon-512.png"
  }
}
