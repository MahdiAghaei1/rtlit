{
  "manifest_version": 3,
  "name": "rtlit",
  "description": "Change the direction of any text to rtl or ltr in you webpage",
  "version": "0.0.1",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "./images/icon-512.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
